mixin review(review)

  .review
    .review__author
      img.avatar(src=helpers.gravatar(review.authoremail) alt=review.authorname)
      p= review.authorname
    .review__details
      .review__stars(title=`Rated ${review.rating} out of 5 stars`)
        = `★`.repeat(review.rating)
        = `☆`.repeat(5 - review.rating)
      time.review__time(datetime=review.created)= helpers.moment(review.created).fromNow()
      if review.text
        .review__body
          p !{review.text}
